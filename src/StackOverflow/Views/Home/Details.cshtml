@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims

@model StackOverflow.Models.Question

<h2>Details</h2>
<hr />
<h1>@Html.DisplayFor(model => model.Title)</h1>
<p>by @Html.DisplayFor(model => model.User.UserName)</p>
<p>@Html.DisplayFor(model => model.Content)</p>
<hr />

@if (Model.Answers.Any())
{
    <ul>
        @foreach (var listAnswer in Model.Answers)
        {
            <li>"@Html.DisplayFor(modelQuestion => listAnswer.Content)" - @Html.DisplayFor(modelQuestion => listAnswer.User.UserName) </li>
        }
    </ul>
}
else
{
    <p>No answers.</p>

}

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Title)
    @Html.TextBoxFor(model => model.Title)

    @Html.LabelFor(model => model.Content)
    @Html.TextBoxFor(model => model.Content)

    <input type="submit" value="Add new task" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>